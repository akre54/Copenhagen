<p id="notice"><%= notice %></p>

<p>
  <b>First name:</b>
  <%= @biker.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @biker.last_name %>
</p>

<p>
  <b>Netid:</b>
  <%= @biker.netid %>
</p>

<p>
  <b>Number of checkouts:</b>
  <%= @biker.checkouts.count %>
  <% unless @biker.checkouts.count == 0 %>
    (<%= link_to 'show', biker_checkouts_path(@biker)%>)
  <% end %>
</p>

<p>
  <b>Email:</b>
  <%= @biker.email %>
</p>

<p>
  <b>Affiliation:</b>
  <%= @biker.affiliation %>
</p>

<p>
  <b>Year of graduation:</b>
  <%= @biker.year_of_graduation %>
</p>


<% if current_user.admin? %>
  <%= link_to 'Edit', edit_biker_path(@biker) %> |
<% end %>
<%= link_to 'Back', bikers_path %>
