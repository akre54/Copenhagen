<h1>Listing bikers</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Netid</th>
    <th>Email</th>
    <th>Affiliation</th>
    <th>Year of graduation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bikers.each do |biker| %>
  <tr>
    <td><%= biker.first_name %></td>
    <td><%= biker.last_name %></td>
    <td><%= biker.netid %></td>
    <td><%= biker.email %></td>
    <td><%= biker.affiliation %></td>
    <td><%= biker.year_of_graduation %></td>
    <td><%= link_to 'Show', biker %></td>
    <td><%= link_to 'Edit', edit_biker_path(biker) %></td>
    <td><%= link_to 'Destroy', biker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

