<%- model_class = Bike -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Bike #</th>
      <th>Color</th>
      <th>Condition</th>
      <% if current_user.admin? %>
        <th>Location</th>
      <% end %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @bikes.sort{|a,b| a.id <=> b.id }.each do |bike| %>
      <tr>
        <td><%= link_to "##{bike.id} #{bike.manufacturer} #{bike.model}", bike_path(bike) %></td>
        <td><%= bike.color %></td>
        <td><%= bike.condition %></td>
        <% if current_user.admin? %>
          <td><%= link_to "#{bike.location.name}", bike.location %></td>
          <td>
            <%= link_to 'Edit', edit_bike_path(bike), :class => 'btn btn-mini' %>
            <%= link_to 'Delete', bike_path(bike), :method => :delete,
                :data => { :confirm => 'Are you sure?' },
                :class => 'btn btn-mini btn-danger' %>
          </td>
        <% else %>
          <td><%= link_to 'Checkout', new_checkout_path %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_bike_path, :class => 'btn btn-primary' %>
